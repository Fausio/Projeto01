@model  Modelo.Cadastros.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listagem de FABRICANTES";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Visualizando detalhes de um PRODUTO
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Categoria)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Categoria.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Fabricante)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Fabricante.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>

        <div class="col-md-offset-6 col-md-5">
            <div class="form-group">
                <input type="file" name="logotipo" id="logotipo" disabled="disabled" onchange='$("#upload-fileinfo").html($(this).val());' />
                <span id="upload-file-info"></span>
            </div>
            <div class="form-group">
                @if (Model.Logotipo == null)
                {
                    <div class="form-control-static">
                        Nem uma imagem adicionada
                    </div>
                }
                else
                {
                    <div class="panel-body">
                        <img class="img-thumbnail" src="@Url.Action("GetLogotipo", "Produtos", new { id = Model.ProdutoId })" style="display:block; margin-left:auto;margin-right:auto;" />
                    </div>
                    <div class="panel-footer" hidden="hidden">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="chkRemoverImagem" value="Sim">Remover imagem
                            </label>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>





    <div class="panel-footer panel-info">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.ProdutoId }, new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>

@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active");
        });
    </script>
}