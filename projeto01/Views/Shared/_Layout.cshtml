@using projeto01.Infraestrutura
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width,
    initial-scale=1.0" charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/content/bootstrap.css")" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="page-header bg-danger">
                <div>
                    <h1>
                        Desenvolvimento em ASP.NET MVC <small class="text-danger">Utilizando o Bootstrap</small>
                    </h1>
                </div>

                <div>

                    @if (Html.GetAuthenticatedUser().ToString() != "")
                    {
                        @Html.GetAuthenticatedUser();
                        @Html.ActionLink(" - Sair", "Logout", "Account");
                    }
                    else
                    {
                        @Html.ActionLink("Acessar", "Login", "Account", new { area = "Seguranca" }, null);
                    }

                </div>
            </div>



        </div>
        <div class="row  ">
            <div class="col-xs-3 col-md-3 bg-success">
                <ul class="nav nav-pills nav-stacked">
                    <li id="liHome" role="presentation" class="active"><hr /></li>
                    <li id="liHome" role="presentation" class="active"><a href="#">Home</a></li>
                    <li id="liCategorias" role="presentation"> @Html.ActionLink("Categorias", "Index", "Categorias", new { Area = "Tabelas" }, new { }) </li>
                    <li id="liCategorias" role="presentation"> @Html.ActionLink("Fabricantes", "Index", "Fabrincates", new { Area = "Cadastros" }, new { }) </li>
                    <li id="liProdutos" role="presentation">@Html.ActionLink("Produtos", "Index", "Produtos", new { Area = "Cadastros" }, new { }) </li>

                    <li id="liUsuarios" role="presentation">@Html.ActionLink("Usuarios", "Index", "Admin", new { Area = "Seguranca" }, new { }) </li>
                    <li id="liPapeisUsuarios" role="presentation">@Html.ActionLink("Papéis", "Index", "PapelAdmin", new { Area = "Seguranca" }, new { }) </li>

                    <li id="liCarrinho" role="presentation">@Html.ActionLink("Carrinho de compra", "Create", "Carrinhos", new { Area = "Carrinho" }, new { }) </li>
                </ul>
            </div>
            <div class="col-xs-9 col-md-9">
                <br />
                @RenderBody()
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-12 col-md-12 bg-danger">
                <small>
                    &copy; 2019  All Rights Reserved

                    <a href="http://github/fausio.com">     GuidHub    </a>   |
                    <a href="http://facebook.com/fausioluis">     Facebook    </a>  |
                    <a href="#" >     Instagram    </a> |
                    <a href="#">     Twittwer </a>
                </small>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/scripts/jquery-1.10.2.js")"></script>
    <script src="@Url.Content("~/scripts/bootstrap.js")"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>

    @RenderSection("ScriptPage", required: false)
    @RenderSection("styles", required: false)



</body>
</html>